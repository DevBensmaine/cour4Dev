{% extends "base.html.twig" %}

{% block title %}Cours4DevprofessorBundle:ProfessorController:list
{% endblock %}

{% block body %}
	<div class="row page-titles">
		<div class="col-md-5 col-8 align-self-center">
			<h3 class="text-themecolor">Dashboard</h3>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Home</a>
				</li>
				<li class="breadcrumb-item active">Dashboard</li>
			</ol>
		</div>
		<div class="col align-self-end" style="text-align: right;">
			<a href="{{ path('professoradd') }}" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">
				Add professor
			</a>
		</div>
	</div>


	<div
		class="row">
		<!-- column -->
		<div class="col-lg-12">
			<div class="card">
				<div class="card-block">
					<h4 class="card-title">Liste of professor</h4>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>#</th>
									<th>Nom</th>
									<th>Prenom</th>
									<th>Email</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for professor in professors %}
									<tr>
										<td>{{ professor.id }}</td>
										<td>{{ professor.nom|lower }}</td>
										<td>{{ professor.prenom|lower }}</td>
										<td>{{ professor.email|lower }}</td>
										<td>
											<button type="button" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-edit edit-action-p" aria-hidden="true"></span>
											</button>
											<button type="button" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-remove remove-action-p" aria-hidden="true"></span>
											</button>
										</td>
									</tr>

								{% endfor %}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
