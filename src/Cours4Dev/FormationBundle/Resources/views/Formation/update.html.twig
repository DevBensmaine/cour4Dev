{% extends "base.html.twig" %}

{% block title %}Cours4DevprofessorBundle:ProfessorController:add
{% endblock %}


{% block body %}

	<div class="row page-titles">
		<div class="col-md-5 col-8 align-self-center">
			<h3 class="text-themecolor">Dashboard</h3>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Home</a>
				</li>
				<li class="breadcrumb-item active">Dashboard</li>
			</ol>
		</div>
		<div class="col align-self-end" style="text-align: right;">
			<a href="https://wrappixel.com/templates/materialpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">
		Add formation</a>
		</div>
	</div>

	<div class="row page-titles">
		<div class="col-md-7 col-8 align-self-center">

			{{ form_start(form,{'attr':{ 'novalidate':'novalidate'}}) }}


			<div class="form-group row">
				{{ form_label(form.titre, null, {
								'label_attr': {'class': 'col-form-label col-sm-2 form-control-label required'}
						}) }}
				<div class="col-sm-10">
					{{ form_widget(form.titre) }}
				</div>
			</div>


			<div class="form-group row">
				{{ form_label(form.description, null, {
								'label_attr': {'class': 'col-form-label col-sm-2 form-control-label required'}
						}) }}
				<div class="col-sm-10">
					{{ form_widget(form.description) }}
				</div>
			</div>

			<div class="form-group row">
				{{ form_label(form.professor, null, {
								'label_attr': {'class': 'col-form-label col-sm-2 form-control-label required'}
						}) }}
				<div class="col-sm-10">
					{{ form_widget(form.professor) }}
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-10">
					{{ form_widget(form.save) }}
				</div>
			</div>


			{{ form_end(form) }}

		</div>
	</div>


{% endblock %}
