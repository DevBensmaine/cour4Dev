{% extends "base.html.twig" %}

{% block title %}Cours4DevprofessorBundle:ProfessorController:list
{% endblock %}

{% block body %}
	<div class="row page-titles">
		<div class="col-md-5 col-8 align-self-center">
			<h3 class="text-themecolor">Dashboard</h3>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Home</a>
				</li>
				<li class="breadcrumb-item active">Dashboard</li>
			</ol>
		</div>
		<div class="col align-self-end" style="text-align: right;">
			<a href="{{ path('cours4_dev_cour_home_add') }}" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">
				Add Cours
			</a>
		</div>
	</div>

	<h1>Cours List</h1>
	<div
		class="row">
		<!-- column -->
		<div class="col-lg-12">
			<div class="card">
				<div class="card-block">
					<h4 class="card-title">Liste of professor</h4>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>#</th>
									<th>Titre</th>
									<th>Description</th>
                  <th>dure</th>
									<th>Formation</th>
									<th>Chapitre</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>

								{% for cour in cours %}
									<tr>
										<td>{{ cour.id }}</td>
										<td>{{ cour.titre|lower }}</td>
										<td>{{ cour.description|lower }}</td>
										<td>{{ cour.dure|lower }}</td>
										<td>{{ cour.formation.titre|lower }}</td>
										<td>{{ cour.chapitre.titre|lower }}</td>
										<td>
											<a href="{{ path('cours4_dev_cour_home_update', {cour: cour.id }) }}" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-edit edit-action-p" aria-hidden="true"></span>
											</a>
											<a href="{{ path('cours4_dev_cour_home_delete', {cour: cour.id }) }}" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-remove remove-action-p" aria-hidden="true"></span>
											</a>
										</td>
									</tr>

								{% endfor %}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
