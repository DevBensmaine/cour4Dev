{% extends "base.html.twig" %}

{% block title %}
    Chapitre
{% endblock %}

{% block body %}
	<div class="row page-titles">
		<div class="col-md-5 col-8 align-self-center">
			<h3 class="text-themecolor">Dashboard</h3>
			<ol class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="javascript:void(0)">Home</a>
				</li>
				<li class="breadcrumb-item active">Dashboard</li>
			</ol>
		</div>
		<div class="col align-self-end" style="text-align: right;">
			<a href="{{ path('cours4_dev_chapitre_add') }}" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">
		Add Chapitre</a>
		</div>
	</div>

	<div
		class="row">

		<!-- column -->
		<div class="col-lg-12">
			<div class="card">
				<div class="card-block">
					<h4 class="card-title">Liste of Chapitre</h4>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>#</th>
									<th>Titre</th>
									<th>Formation</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for chapitre in chapitres %}
									<tr>
										<td>{{ chapitre.id }}</td>
										<td>{{ chapitre.titre|lower }}</td>			
										<td>{{ chapitre.formation.titre|lower }}</td>			
										<td>
											<a  href="{{ path('cours4_dev_chapitre_update', {chapitre: chapitre.id}) }}" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-edit edit-action-p" aria-hidden="true"></span>
											</a>
											<a href="{{ path('cours4_dev_chapitre_delete', {chapitre: chapitre.id}) }}" class="btn btn-default" aria-label="Left Align">
												<span class="mdi mdi-account-remove remove-action-p" aria-hidden="true"></span>
											</a>
										</td>
									</tr>

								{% endfor %}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
